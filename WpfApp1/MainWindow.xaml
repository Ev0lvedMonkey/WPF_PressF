<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Factory" Height="540" Width="960" 
        Icon="\Resources\Logo\Logo_Color_Transparent.png">
    <Grid Background="#f3cc8d">
        <Grid.RowDefinitions>
            <RowDefinition Height="493*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame"  NavigationUIVisibility="Hidden"/>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1">
            <DockPanel>
                <Button Grid.Row="1" Content="Выйти" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                FontSize="18" FontWeight="Medium" Margin="0,0,0,3" Click="ExitBtn_Click" Name="ExitBtn"
                Background="#4867ac" Foreground="White"/>
                <TextBlock Grid.Row="1" Name="UserFullNameText"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                FontSize="18" FontWeight="Medium"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
